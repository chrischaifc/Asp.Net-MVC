@model IEnumerable<MyFirstMVC.Models.RotationList.RotationList>

@{
    ViewBag.Title = "StudentPage";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>StudentPage</h2>

<p>
    @Html.ActionLink("Add New Rotation", "AddNewRotationStudent")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supervisor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supervisor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRotationStudent", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "DetailsRotationStudent", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "DeleteRotationStudent", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
